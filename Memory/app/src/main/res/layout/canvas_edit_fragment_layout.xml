<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/canvas_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <vaystudios.com.memory.View.CanvasView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/oval"
        android:elevation="5dp"
        android:padding="10dp"
        android:id="@+id/btn_canvasOption"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/img_new_memory"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/oval"
        android:elevation="5dp"
        android:padding="10dp"
        android:backgroundTint="@color/colorLightGray"
        android:id="@+id/btn_canvasComplete"
        android:layout_marginRight="15dp"
        android:src ="@mipmap/ic_launcher"
        android:layout_marginEnd="23dp"
        android:layout_alignTop="@+id/btn_canvasOption"
        android:layout_alignParentEnd="true" />


        <vaystudios.com.memory.CustomLayout.CustomColorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/canvasEdit_colorLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/canvasEdit_colorLinerLayout">
            </LinearLayout>

        </vaystudios.com.memory.CustomLayout.CustomColorLayout>


</RelativeLayout>

